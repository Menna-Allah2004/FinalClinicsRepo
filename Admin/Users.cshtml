@model List<ApplicationUser>

@{
    ViewData["Title"] = "إدارة المستخدمين";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var userType = ViewBag.UserType as string;
}

<div class="admin-page-container">
    <div class="page-header mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="page-title">
                    <i class="fas fa-users text-primary me-2"></i>
                    إدارة المستخدمين
                </h2>
                <p class="text-muted">عرض وإدارة جميع مستخدمي النظام</p>
            </div>
            <div class="col-md-4 text-end">
                <span class="badge bg-primary fs-6">
                    @Model.Count مستخدم
                </span>
            </div>
        </div>
    </div>

    <!-- User Type Filter -->
    <div class="filter-section mb-4">
        <div class="filter-buttons">
            <a href="@Url.Action("Users", "Admin")"
               class="filter-btn @(string.IsNullOrEmpty(userType) ? "active" : "")">
                <i class="fas fa-users me-1"></i>
                جميع المستخدمين (@Model.Count)
            </a>
            <a href="@Url.Action("Users", "Admin", new { userType = "Doctor" })"
               class="filter-btn @(userType == "Doctor" ? "active" : "")">
                <i class="fas fa-user-md me-1"></i>
                الأطباء (@Model.Count(u => u.UserType == "Doctor"))
            </a>
            <a href="@Url.Action("Users", "Admin", new { userType = "Patient" })"
               class="filter-btn @(userType == "Patient" ? "active" : "")">
                <i class="fas fa-user-injured me-1"></i>
                المرضى (@Model.Count(u => u.UserType == "Patient"))
            </a>
            <a href="@Url.Action("Users", "Admin", new { userType = "Admin" })"
               class="filter-btn @(userType == "Admin" ? "active" : "")">
                <i class="fas fa-user-shield me-1"></i>
                المديرون (@Model.Count(u => u.UserType == "Admin"))
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="users-grid">
            @foreach (var user in Model)
            {
                <div class="user-card">
                    <div class="user-header">
                        <div class="user-avatar">
                            @if (!string.IsNullOrEmpty(user.ImageUrl))
                            {
                                <img src="@user.ImageUrl" alt="@user.FullName" class="avatar-image">
                            }
                            else
                            {
                                <div class="avatar-placeholder">
                                    @if (user.UserType == "Doctor")
                                    {
                                        <i class="fas fa-user-md"></i>
                                    }
                                    else if (user.UserType == "Patient")
                                    {
                                        <i class="fas fa-user-injured"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-user"></i>
                                    }
                                </div>
                            }
                        </div>
                        <div class="user-status">
                            @if (user.IsApproved)
                            {
                                <span class="status-badge approved">
                                    <i class="fas fa-check-circle"></i>
                                </span>
                            }
                            else
                            {
                                <span class="status-badge pending">
                                    <i class="fas fa-clock"></i>
                                </span>
                            }
                        </div>
                    </div>

                    <div class="user-info">
                        <h5 class="user-name">@user.FullName</h5>
                        <p class="user-email">@user.Email</p>
                        <div class="user-type-badge @user.UserType.ToLower()">
                            @switch (user.UserType)
                            {
                                case "Doctor":
                                    <i class="fas fa-user-md me-1"></i>
                                    <span>طبيب</span>
                                    break;
                                case "Patient":
                                    <i class="fas fa-user-injured me-1"></i>
                                    <span>مريض</span>
                                    break;
                                case "Admin":
                                    <i class="fas fa-user-shield me-1"></i>
                                    <span>مدير</span>
                                    break;
                                default:
                                    <i class="fas fa-user me-1"></i>
                                    <span>مستخدم</span>
                                    break;
                            }
                        </div>
                    </div>

                    <div class="user-details">
                        <div class="detail-item">
                            <i class="fas fa-phone text-success"></i>
                            <span>@(user.PhoneNumber ?? "غير محدد")</span>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-calendar text-info"></i>
                            <span>@user.CreatedAt.ToString("yyyy/MM/dd")</span>
                        </div>
                    </div>

                    <div class="user-actions">
                        <a href="@Url.Action("UserDetails", "Admin", new { id = user.Id })"
                           class="btn btn-primary btn-sm">
                            <i class="fas fa-eye me-1"></i>
                            عرض
                        </a>
                        @if (user.UserType != "Admin")
                        {
                            <form asp-action="DeleteUser" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-danger btn-sm"
                                        onclick="return confirm('هل أنت متأكد من حذف هذا المستخدم؟')">
                                    <i class="fas fa-trash me-1"></i>
                                    حذف
                                </button>
                            </form>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="text-center py-5">
                <i class="fas fa-users text-muted fa-5x mb-4"></i>
                <h3 class="text-muted">لا يوجد مستخدمون</h3>
                <p class="text-muted">لا توجد مستخدمون يطابقون المعايير المحددة</p>
            </div>
        </div>
    }
</div>
