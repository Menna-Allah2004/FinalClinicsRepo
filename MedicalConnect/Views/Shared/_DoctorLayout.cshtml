@using Microsoft.AspNetCore.Identity
@using MedicalConnect.Database

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ميديكال كونكت</title>
    <meta name="description" content="لوحة تحكم للطبيب بتصميم أنيق وعصري">

    <!-- Bootstrap RTL CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css">

    <!-- Google Fonts - Almarai -->
    <link href="https://fonts.googleapis.com/css2?family=Almarai:wght@300;400;700;800&display=swap" rel="stylesheet">

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Chart.js for charts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/stylee.css" asp-append-version="true">

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="d-flex">
        <!-- القائمة الجانبية -->
        <!-- استدعاء الـ Partial View للـ Sidebar -->
        @Html.Partial("_DoctorSidebarPartial")

        <!-- المحتوى الرئيسي -->
        <main class="main-content">
            <header class="main-header">
                <div class="container-fluid py-2">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            @if (ViewContext.RouteData.Values["Action"].ToString() != "Patients")
                            {
                                <div class="search-container position-relative">
                                    <i class="fas fa-search search-icon"></i>
                                    <input type="search" class="form-control search-input" placeholder="ابحث عن مرضى، مواعيد...">
                                </div>
                            }
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="d-flex justify-content-end align-items-center">
                                @if (ViewContext.RouteData.Values["Action"].ToString() == "Appointments")
                                {
                                    <button class="btn btn-outline-secondary btn-sm me-2">
                                        <i class="fas fa-filter me-1"></i>
                                        تصفية
                                    </button>
                                    <button class="btn btn-primary btn-sm me-2">
                                        <i class="fas fa-plus me-1"></i>
                                        موعد جديد
                                    </button>
                                }
                                else if (ViewContext.RouteData.Values["Action"].ToString() == "Patients")
                                {
                                    <button class="btn btn-primary btn-sm me-2">
                                        <i class="fas fa-plus me-1"></i>
                                        مريض جديد
                                    </button>
                                }
                                <div class="notification-icon position-relative ms-2">
                                    <button class="btn btn-light rounded-circle">
                                        <i class="fas fa-bell"></i>
                                        <span class="notification-badge"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <div class="container-fluid p-3">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- القائمة الجانبية للجوال -->
    <div id="mobile-sidebar-overlay" class="mobile-sidebar-overlay d-none"></div>
    <button id="mobile-menu-toggle" class="mobile-menu-toggle">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JavaScript files -->
    <script src="~/js/sidebar.js" asp-append-version="true"></script>
    <script src="~/js/utils.js" asp-append-version="true"></script>
    <script src="~/js/dashboard.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>