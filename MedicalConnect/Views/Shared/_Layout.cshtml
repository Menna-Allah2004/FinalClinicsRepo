@using Microsoft.AspNetCore.Identity
@using MedicalConnect.Database

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MedicalConnect</title>
    <!-- Bootstrap RTL CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/styles-bootstrap.css">
    <link rel="stylesheet" href="~/css/styless.css">
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <span class="text-primary fw-bold">Medical</span>
                    <span class="text-info">Connect</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(((ViewContext.RouteData.Values["Action"] as string) == "Index" &&
                                (ViewContext.RouteData.Values["Controller"] as string) == "Home") ? "active" : "")"
                               asp-controller="Home" asp-action="Index">الرئيسية</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(((ViewContext.RouteData.Values["Controller"] as string) == "Doctors") ? "active" : "")"
                               asp-controller="Doctors" asp-action="Index">الأطباء</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(((ViewContext.RouteData.Values["Action"] as string) == "Services") ? "active" : "")"
                               asp-controller="Home" asp-action="Services">الخدمات</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(((ViewContext.RouteData.Values["Action"] as string) == "About") ? "active" : "")"
                               asp-controller="Home" asp-action="About">من نحن</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(((ViewContext.RouteData.Values["Controller"] as string) == "ContactUs") ? "active" : "")"
                               asp-controller="ContactUS" asp-action="Index">اتصل بنا</a>
                        </li>
                    </ul>
                </div>
            </div>
            <partial name="_LoginPartial" />
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 class="fw-bold mb-3">ميديكال كونكت</h5>
                    <p class="text-muted">منصة متكاملة تجمع بين المرضى والأطباء لتقديم خدمة صحية متميزة وسهلة الوصول</p>
                    <div class="d-flex gap-2 mt-3">
                        <a href="#" class="btn btn-sm btn-outline-light rounded-circle">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="btn btn-sm btn-outline-light rounded-circle">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="btn btn-sm btn-outline-light rounded-circle">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="btn btn-sm btn-outline-light rounded-circle">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </div>
                <div class="col-md-2 mb-4 mb-md-0">
                    <h6 class="fw-bold mb-3">روابط سريعة</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a asp-controller="Home" asp-action="Index" class="text-decoration-none text-muted">الرئيسية</a></li>
                        <li class="mb-2"><a asp-controller="Doctors" asp-action="Index" class="text-decoration-none text-muted">الأطباء</a></li>
                        <li class="mb-2"><a asp-controller="Home" asp-action="Services" class="text-decoration-none text-muted">الخدمات</a></li>
                        <li class="mb-2"><a asp-controller="Home" asp-action="About" class="text-decoration-none text-muted">من نحن</a></li>
                        <li><a asp-controller="ContactUs" asp-action="Index" class="text-decoration-none text-muted">اتصل بنا</a></li>
                    </ul>
                </div>
                <div class="col-md-2 mb-4 mb-md-0">
                    <h6 class="fw-bold mb-3">الخدمات</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-decoration-none text-muted">استشارات طبية</a></li>
                        <li class="mb-2">
                            <a asp-controller="Appointments" asp-action="Create" class="text-decoration-none text-muted">حجز المواعيد</a>
                        </li>
                        <li class="mb-2">
                            <a href="case-follow-up.html" class="text-decoration-none text-muted">متابعة الحالة</a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="MedicalReports" asp-action="Index" class="text-decoration-none text-muted">التقارير الطبية</a>
                        </li>
                        <li><a href="#" class="text-decoration-none text-muted">خدمات أخرى</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6 class="fw-bold mb-3">اتصل بنا</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2 text-muted"><i class="fas fa-map-marker-alt me-2"></i> فلسطين - غزة </li>
                        <li class="mb-2 text-muted"><i class="fas fa-phone me-2"></i> +972567000000</li>
                        <li class="mb-2 text-muted"><i class="fas fa-envelope me-2"></i> info@medicalconnect.com</li>
                    </ul>
                    <div class="mt-3">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="البريد الإلكتروني">
                            <button class="btn btn-primary" type="button">اشترك</button>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="my-4 border-secondary">
            <div class="text-center text-muted small">
                &copy; @DateTime.Now.Year ميديكال كونكت. جميع الحقوق محفوظة. <a asp-area="" asp-controller="Home" asp-action="Privacy">الخصوصية</a>
            </div>
        </div>
    </footer>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JavaScript -->
    <script src="~/js/index.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
