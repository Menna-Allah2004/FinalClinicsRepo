@model List<MedicalConnect.ViewModels.MedicalReportViewModel>

@{
    ViewData["Title"] = "التقارير الطبية";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">التقارير الطبية</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Dashboard")">لوحة التحكم</a></li>
                <li class="breadcrumb-item active">التقارير الطبية</li>
            </ol>
        </nav>
    </div>

    <div class="card">
        <div class="card-header">
            <i class="fas fa-file-medical me-1"></i>
            جميع التقارير الطبية (@Model.Count)
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>رقم التقرير</th>
                                <th>المريض</th>
                                <th>الطبيب</th>
                                <th>التشخيص</th>
                                <th>تاريخ الإنشاء</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var report in Model)
                            {
                                <tr>
                                    <td>#@report.Id</td>
                                    <td>@report.PatientName</td>
                                    <td>@report.DoctorName</td>
                                    <td>@(report.Diagnosis ?? "-")</td>
                                    <td>@report.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        <button class="btn btn-info btn-sm" onclick="viewReport(@report.Id)">
                                            <i class="fas fa-eye"></i> عرض
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-file-medical fa-4x text-muted mb-3"></i>
                    <h4>لا توجد تقارير طبية</h4>
                    <p class="text-muted">لم يتم إنشاء أي تقارير طبية بعد</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function viewReport(reportId) {
            // يمكن إضافة مودال أو توجيه لصفحة تفاصيل التقرير
            alert('عرض التقرير رقم: ' + reportId);
        }
    </script>
}
