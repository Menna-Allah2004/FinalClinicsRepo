@{
    ViewData["Title"] = "تحديث صفحة من نحن";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string aboutUsContent = ViewBag.AboutUsContent as string;
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">تحديث صفحة من نحن</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Dashboard")">لوحة التحكم</a></li>
                <li class="breadcrumb-item active">تحديث صفحة من نحن</li>
            </ol>
        </nav>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <i class="fas fa-edit me-1"></i>
            تحديث محتوى صفحة من نحن
        </div>
        <div class="card-body">
            <form asp-action="UpdateAboutUs" method="post">
                <div class="mb-3">
                    <label for="content" class="form-label">محتوى الصفحة</label>
                    <textarea name="content" id="content" class="form-control" rows="15" required>@aboutUsContent</textarea>
                    <div class="form-text">يمكنك استخدام HTML في المحتوى</div>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> حفظ التحديثات
                    </button>
                    <a href="@Url.Action("Dashboard")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> إلغاء
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <i class="fas fa-eye me-1"></i>
            معاينة المحتوى الحالي
        </div>
        <div class="card-body">
            <div id="preview">
                @Html.Raw(aboutUsContent)
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // تحديث المعاينة عند تغيير المحتوى
        document.getElementById('content').addEventListener('input', function() {
            document.getElementById('preview').innerHTML = this.value;
        });
    </script>
}
