@model MedicalConnect.ViewModels.AppointmentListViewModel

@{
    ViewData["Title"] = "المواعيد";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}

<!-- إحصائيات المواعيد -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">إجمالي المواعيد</h5>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <i class="fas fa-calendar-alt text-primary fa-2x"></i>
                    <span class="fs-2 fw-bold">@Model.TotalAppointmentsCount</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">مواعيد اليوم</h5>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <i class="fas fa-clock text-success fa-2x"></i>
                    <span class="fs-2 fw-bold">@Model.TodayAppointmentsCount</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">المواعيد القادمة</h5>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <i class="fas fa-arrow-up text-info fa-2x"></i>
                    <span class="fs-2 fw-bold">@Model.UpcomingAppointmentsCount</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">المواعيد الملغاة</h5>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <i class="fas fa-times text-danger fa-2x"></i>
                    <span class="fs-2 fw-bold">@Model.CancelledAppointmentsCount</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- علامات التبويب للمواعيد -->
<div class="card">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs" id="appointmentTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="today-tab" data-bs-toggle="tab" data-bs-target="#today" type="button" role="tab">
                    مواعيد اليوم (@Model.TodayAppointmentsCount)
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="upcoming-tab" data-bs-toggle="tab" data-bs-target="#upcoming" type="button" role="tab">
                    المواعيد القادمة (@Model.UpcomingAppointmentsCount)
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="past-tab" data-bs-toggle="tab" data-bs-target="#past" type="button" role="tab">
                    المواعيد السابقة
                </button>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content" id="appointmentTabsContent">
            <!-- مواعيد اليوم -->
            <div class="tab-pane fade show active" id="today" role="tabpanel">
                @if (Model.TodayAppointments.Any())
                {
                    <div class="row">
                        @foreach (var appointment in Model.TodayAppointments)
                        {
                            <div class="col-md-6 col-lg-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h6 class="card-title">@appointment.PatientName</h6>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <i class="fas fa-clock me-1"></i>
                                                @appointment.StartTime.ToString(@"hh\:mm") - @appointment.EndTime.ToString(@"hh\:mm")
                                            </small>
                                        </p>
                                        <p class="card-text">@appointment.Notes</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="badge bg-primary">@appointment.Status</span>
                                            @if (appointment.IsVirtual)
                                            {
                                                <span class="badge bg-info">استشارة إلكترونية</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-calendar-alt text-muted fa-3x mb-3"></i>
                        <p class="text-muted">لا توجد مواعيد لهذا اليوم</p>
                    </div>
                }
            </div>

            <!-- المواعيد القادمة -->
            <div class="tab-pane fade" id="upcoming" role="tabpanel">
                @if (Model.UpcomingAppointments.Any())
                {
                    <div class="row">
                        @foreach (var appointment in Model.UpcomingAppointments)
                        {
                            <div class="col-md-6 col-lg-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h6 class="card-title">@appointment.PatientName</h6>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>
                                                @appointment.AppointmentTime.ToString("dd/MM/yyyy")
                                            </small>
                                        </p>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <i class="fas fa-clock me-1"></i>
                                                @appointment.StartTime.ToString(@"hh\:mm") - @appointment.EndTime.ToString(@"hh\:mm")
                                            </small>
                                        </p>
                                        <p class="card-text">@appointment.Notes</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="badge bg-warning">@appointment.Status</span>
                                            @if (appointment.IsVirtual)
                                            {
                                                <span class="badge bg-info">استشارة إلكترونية</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-calendar-plus text-muted fa-3x mb-3"></i>
                        <p class="text-muted">لا توجد مواعيد قادمة</p>
                    </div>
                }
            </div>

            <!-- المواعيد السابقة -->
            <div class="tab-pane fade" id="past" role="tabpanel">
                @if (Model.PastAppointments.Any())
                {
                    <div class="row">
                        @foreach (var appointment in Model.PastAppointments)
                        {
                            <div class="col-md-6 col-lg-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h6 class="card-title">@appointment.PatientName</h6>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>
                                                @appointment.AppointmentTime.ToString("dd/MM/yyyy")
                                            </small>
                                        </p>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <i class="fas fa-clock me-1"></i>
                                                @appointment.StartTime.ToString(@"hh\:mm") - @appointment.EndTime.ToString(@"hh\:mm")
                                            </small>
                                        </p>
                                        <p class="card-text">@appointment.Notes</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="badge bg-success">@appointment.Status</span>
                                            @if (appointment.IsVirtual)
                                            {
                                                <span class="badge bg-info">استشارة إلكترونية</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-history text-muted fa-3x mb-3"></i>
                        <p class="text-muted">لا توجد مواعيد سابقة</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>