@model MedicalConnect.ViewModels.DoctorViewModel

@{
    ViewData["Title"] = Model.FullName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pt-5 bg-medical-50">
    <div class="container pt-5 pb-4">
        <!-- بطاقة تفاصيل الطبيب -->
        <div class="row g-4 mb-5">
            <div class="col-lg-4">
                <div class="card rounded-4 border shadow-sm overflow-hidden">
                    <div class="text-center py-4 bg-light">
                        <img src="@Url.Content(string.IsNullOrEmpty(Model.ImageUrl) ? "~/images/doctors/default-user.png" : Model.ImageUrl)"
                             alt="@Model.FullName"
                             class="rounded-circle img-thumbnail"
                             style="width: 150px; height: 150px; object-fit: cover;"
                             onerror="this.onerror=null;this.src='/images/doctors/default-user.png';">
                    </div>
                    <div class="card-body p-4">
                        <h3 class="text-center mb-1">@Model.FullName</h3>
                        <p class="text-primary text-center mb-3">@Model.Specialty</p>

                        <div class="d-flex justify-content-center align-items-center mb-4">
                            <div class="me-3 text-center">
                                <span class="d-block text-muted small">التقييم</span>
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="fas fa-star text-warning"></i>
                                    <span class="ms-1 fw-bold">@Model.Rating</span>
                                </div>
                            </div>
                            @* <div class="ms-3 text-center"> *@
                            @*     <span class="d-block text-muted small">المراجعات</span> *@
                            @*     <div class="fw-bold">@Model.feedback</div> *@
                            @* </div> *@
                        </div>

                        <hr class="my-3">

                        <div class="row mb-3 g-3">
                            <div class="col-6">
                                <div class="p-3 bg-light rounded-3 text-center">
                                    <div class="text-muted small mb-1">سنوات الخبرة</div>
                                    <div class="fw-bold">@Model.ExperienceYears سنة</div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="p-3 bg-light rounded-3 text-center">
                                    <div class="text-muted small mb-1">المرضى</div>
                                    <div class="fw-bold">+ @(Model.DoctorsDash?.PatientsCount ?? 0)</div>
                                </div>
                            </div>
                        </div>

                        <div class="p-3 bg-light rounded-3 mb-4">
                            <div class="d-flex justify-content-between mb-2">
                                <span>سعر الكشف</span>
                                <span class="fw-bold text-primary">
                                    @(Model.ConsultationFee != null && Model.ConsultationFee > 0 ? $"{Model.ConsultationFee} شيكل" : "غير محدد")
                                </span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>مدة الانتظار</span>
                                <span class="fw-bold">
                                    @(
                                        Model.Availabilities?.FirstOrDefault()?.WaitingTime != null
                                        && Model.Availabilities.FirstOrDefault().WaitingTime != ""
                                        ? Model.Availabilities.FirstOrDefault().WaitingTime + " دقيقة"
                                        : "غير محدد"
                                        )
                                </span>
                            </div>
                        </div>

                        <div class="d-grid">
                            <a href="@Url.Action("BookAppointment", "Appointments", new { doctorId = Model.Id })"
                               class="btn btn-primary py-3 rounded-3">
                                <i class="fas fa-calendar-alt me-2"></i> حجز موعد
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="card rounded-4 border shadow-sm mb-4">
                    <div class="card-body p-4">
                        <h4 class="mb-3">نبذة عن الطبيب</h4>
                        <p>@(string.IsNullOrEmpty(Model.Bio) ? "لا توجد معلومات متوفرة عن هذا الطبيب." : Model.Bio)</p>
                    </div>
                </div>

                <div class="card rounded-4 border shadow-sm mb-4">
                    <div class="card-body p-4">
                        <h4 class="mb-3">المؤهلات العلمية والخبرات</h4>
                        @if (string.IsNullOrEmpty(Model.Education))
                        {
                            <p>لا توجد معلومات متوفرة عن المؤهلات العلمية لهذا الطبيب.</p>
                        }
                        else
                        {
                            <p>@Model.Education</p>
                        }
                    </div>
                </div>

                <div class="card rounded-4 border shadow-sm mb-4">
                    <div class="card-body p-4">
                        <h4 class="mb-3">المواعيد المتاحة</h4>
                        <div class="row g-3">
                            @for (int i = 0; i < 7; i++)
                            {
                                var day = DateTime.Now.AddDays(i);
                                var isToday = i == 0;

                                <div class="col-md-4 col-lg-3">
                                    <div class="p-3 rounded-3 text-center mb-2 @(isToday ? "bg-primary text-white" : "bg-light")">
                                        <div class="small mb-1">@day.ToString("dddd", new System.Globalization.CultureInfo("ar-SA"))</div>
                                        <div class="fw-bold">@day.ToString("dd MMM", new System.Globalization.CultureInfo("ar-SA"))</div>
                                    </div>
                                    <div class="text-center small text-success">متاح</div>
                                </div>
                            }
                        </div>
                        <div class="mt-3 text-center">
                            <a href="@Url.Action("BookAppointment", "Appointments", new { doctorId = Model.Id })"
                               class="btn btn-outline-primary">عرض كل المواعيد المتاحة</a>
                        </div>
                    </div>
                </div>

